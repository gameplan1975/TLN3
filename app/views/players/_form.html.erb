<%= form_with model: @player do |f| %>
  <%= f.label :favorite_genre %><br>
  <%= f.text_area :favorite_genre, size: "50x5" %><br><br>
  <%= f.label :message %><br>
  <%= f.text_area :message, size: "50x5"%><br><br>
    <%= f.radio_button :admin, true %>
    <%= f.label :admin, "Administrator" %>
    <%= f.radio_button :admin, false %>
    <%= f.label :admin, "Normal User"%><br><br>
  <%= f.submit %>
  <br>
<% end %>