<h1>プレイヤー一覧</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ユーザー名</th>
        <th>回答数</th>
        <th>正解数</th>
        <th>管理者</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <th><%= player.user.name %></th>
          <th><%= player.game %></th>
          <th><%= player.correct %></th>
          <th><%= player.admin %>
          <th><%= link_to 'show', player_path(player), class: 'btn btn-outline-info btn-sm' %></th>
          <th><%= link_to 'Edit', edit_player_path(player), class: 'btn btn-outline-info btn-sm'  %></th>
          <th><%= link_to 'Destroy', player, method: :delete, class: 'btn btn-outline-danger btn-sm'  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @players %>
<br>
<%= link_to 'ジャンル一覧', genres_path, class: 'btn btn-primary' %>
<%= link_to 'できごと一覧', questions_path, class: 'btn btn-primary'  %>
<%= link_to '伝言板を見る', root_path, class: 'btn btn-primary' %>
<%= link_to 'クイズに挑戦する！', root_path, class: 'btn btn-success' %>